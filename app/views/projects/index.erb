<h1>Patterns</h1>
<h4>Welcome, <%= current_user.username %>!</h4>

<br />

<h4>List of all projects</h4>
<ul>
  <% @projects.all.each_with_index do |project, i| %>
    <li><%= i + 1 %>. <a href="/projects/<%= project.id %>"><%= project.name.capitalize %></a></li>
  <% end %>
</ul>

<br />
<br />

<% if current_user.projects.count == 0 %>
  <p>You have no projects. Click on 'New Pattern' to create a new knitting pattern.</p>
<% else %>

<% if logged_in? && current_user %>
<h4>List of your projects</h4>
  <ul>
    <% current_user.projects.all.each_with_index do |project, i| %>
      <li><%= i + 1 %>. <a href="/projects/<%= project.id %>"><%= project.name.capitalize %></a></li>
    <% end %>
  </ul>
    <% end %>
    <br />

<% end %>
